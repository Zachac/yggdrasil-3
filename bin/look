#!/bin/bash

if [ -e description ] ; then
	cat description
else 
	echo "It looks like a normal room"
fi

read -ra obvExits <<< "$(find $OBVIOUS_EXITS -maxdepth 1 -type l -printf "%f " 2>/dev/null )"
read -ra players <<< "$(find $PLAYERS -maxdepth 1 -type l -printf "%f " 2>/dev/null )"

if [ "${#obvExits[@]}" -eq 0 ]; then
	obvExits=( "none" )
fi

if [ "${#players[@]}" -eq 0 ]; then
	players=( "none" )
fi

echo "Obvious exits: ${obvExits[*]}"
echo "There is: ${players[*]}"

