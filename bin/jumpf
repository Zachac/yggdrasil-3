#!/bin/bash

if [ -z "$*" ]; then
	location=$(load user location)
	path="${location:-root/spawn}"
else
	path="$*"
fi

if [ -z "$ROOMS" ]; then
	echo "Environment not set up!"
	false
else
	source $BIN/jump "$path"
	if [ "$?" -eq 3 ]; then
		echo "Force creating room $ROOMS/$path"
		mkdir -p "$ROOMS/$path"
		echo "It looks like an ordinary room." > "$ROOMS/$path/description"
		source $BIN/jump "$path"
	fi
fi

